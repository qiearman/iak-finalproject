<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:layout_marginTop="@dimen/margin_mini_marpad"
    android:layout_marginBottom="@dimen/margin_mini_marpad">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_SectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:textSize="@dimen/typo_subheading"
                android:layout_marginLeft="@dimen/margin_mini_marpad"
                android:text="Section Title" />

            <TextView
                android:id="@+id/tv_MoreButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/colorPrimary"
                android:text="More"
                android:layout_margin="@dimen/margin_mini_marpad"
                android:paddingTop="@dimen/margin_mini_marpad"
                android:paddingBottom="@dimen/margin_mini_marpad"
                android:paddingLeft="@dimen/margin_marpad"
                android:paddingRight="@dimen/margin_marpad"
                android:textColor="@android:color/white" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_Body"
            android:padding="@dimen/margin_mini_marpad"
            android:orientation="horizontal"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_Section">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</android.support.v7.widget.CardView>